{
    "name": "bc-attendance/attendance-system",
    "description": "Production-ready attendance management web application",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "phpoffice/phpspreadsheet": "^1.29",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"copy('config/config.sample.php', 'config/config.php');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
